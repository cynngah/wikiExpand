{
  "name": "wikiExpand",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension shows a preview of a Wikipedia link so short descriptions can be read on hover.",

  "permissions": [
    "*://*.wikipedia.org/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
